<%- include('partials/header')%>
    <div class="card">
        <div class="card-header">
            <h1 class="text-center">Change Avatar</h1>
        </div>
        <div class="card-body">
            <form action="" method="post">
                <div class="row mb-3">
                    <label for="tittle" class="col-sm-2 col-form-label">Avatar</label>
                    <div class="col-sm-10">
                        <input type="file" class="form-control" name="avatar">
                    </div>
                </div>
        </div>
        <div class="card-footer">
            <div class="btn-group-search">
                <button type="button" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i></button>
                <a href="/users">
                    <button type="button" class="btn btn-warning"><i class="fa-solid fa-rotate-left"></i></button>
                </a>
            </div>
        </div>
    </div>
    <script>
        //             document.getElementById('avatar').onchange = function () {
        //   var src = URL.createObjectURL(this.avatar[0])
        //   document.getElementById('preview').src = src
        // }
        document.getElementById('avatar').addEventListener('change', function (event) {
            let reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('preview').src = e.target.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        });
    </script>
<%- include('partials/footer')%>